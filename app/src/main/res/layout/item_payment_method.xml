<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_payment_method"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white_20"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/background_square"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_payment_method"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/skintific">

        </ImageView>


        <TextView
            android:id="@+id/tv_input_name_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            android:text="Indomaret"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_payment_method"
            app:layout_constraintStart_toEndOf="@+id/iv_payment_method"
            app:layout_constraintTop_toTopOf="@+id/iv_payment_method">


        </TextView>

        <TextView
            android:id="@+id/tv_input_payment_method_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayar dari indomaret"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_input_name_payment_method"
            app:layout_constraintTop_toBottomOf="@+id/tv_input_name_payment_method">

        </TextView>


        <RadioButton
            android:id="@+id/radio_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>